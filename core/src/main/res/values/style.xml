<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlActivated">@color/duskgray</item>
    </style>

    <style name="ChipItem" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:clickable">false</item>
        <item name="chipBackgroundColor">@color/jet</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="textEndPadding">6dp</item>
        <item name="textStartPadding">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Searchview">
        <item name="android:textColorHint">@color/duskgray</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="WindowBackground">
        <item name="backgroundColor">@color/black_700</item>
    </style>
</resources>